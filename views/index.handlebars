<div class="row">
    <div class="col-sm devour-it">
        <h3>Burgers to Devour</h3>
        {{#each burgers}} {{#unless devoured}}
        <div class="card">
            <div class="card-body">
                <h5>{{burger_name}}</h5>
                <button class="btn btn-primary mb-2 devour-btn" data-id="{{id}}">DEVOUR IT</button>
            </div>
        </div>
        {{/unless}} {{/each}}
    </div>
    <div class="col-sm devoured">
        <h3>Burgers Devoured</h3>
        {{#each burgers}} {{#if devoured}}
        <div class="card">
            <div class="card-body">
               <h5>{{burger_name}}</h5>
            </div>
        </div>
        {{/if}} {{/each}}


    </div>
</div>
